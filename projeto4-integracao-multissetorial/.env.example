# ==============================================
# Sistema de Integração Multissetorial - Piauí
# Configurações de Ambiente
# ==============================================

# Ambiente (development, staging, production)
ENVIRONMENT=development

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/integracao_pi
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=integracao_pi
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# API
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Logging
LOG_LEVEL=INFO

# APIs Externas (quando disponíveis)
# DATASUS_API_KEY=your_key_here
# IBGE_API_KEY=your_key_here
# INEP_API_KEY=your_key_here

# Redis (cache)
# REDIS_URL=redis://localhost:6379/0

# Prefect (orquestração)
# PREFECT_API_URL=http://localhost:4200/api

# ==============================================
# Sistema de Compliance LGPD
# Configurações de Ambiente
# ==============================================

# Ambiente (development, staging, production)
ENVIRONMENT=development

# Diretórios
DATA_INPUT_DIR=data/input
DATA_OUTPUT_DIR=data/output
REPORTS_DIR=data/reports

# Logging
LOG_LEVEL=INFO

# Configurações de Anonimização
DEFAULT_HASH_ALGORITHM=sha256
DEFAULT_HASH_TRUNCATE=12
DEFAULT_MASK_CHAR=*
DEFAULT_NOISE_PERCENTAGE=10

# Tokenização (se usar armazenamento externo)
# TOKEN_STORAGE_PATH=tokens/token_vault.json
# TOKEN_SECRET_KEY=your_secret_key_here

# Relatórios
REPORT_FORMAT=html
REPORT_LANGUAGE=pt_BR
